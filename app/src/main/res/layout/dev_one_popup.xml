<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_one"
    android:layout_height="match_parent"
    tools:context=".devTwoPopup">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/devOneNameHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:text="@string/dev_one"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsansbold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="50dp"/>
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/devOneEnlarged"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:elevation="30dp"
                            android:transitionName="devTitle"
                            app:civ_border_width="4dp"
                            android:src="@drawable/anshu"
                            android:layout_below="@id/devOneNameHolder"
                            app:civ_border_color="@color/colorPrimary"
                            android:layout_centerHorizontal="true"/>

                        <ImageView
                            android:id="@+id/devOneGh"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_gh"
                            android:layout_below="@+id/devOneEnlarged"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:focusable="true" />
                    
                        <ImageView
                            android:id="@+id/devOneGhost"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/devOneEnlarged"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_gh" 
                            android:visibility="invisible" />
                    
                        <ImageView
                            android:id="@+id/devOneLinkedin"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/devOneGh"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_linkedin"
                            android:focusable="true" />
                        <ImageView
                            android:id="@+id/devOneWeb"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/devOneLinkedin"
                            android:clickable="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_web"
                            android:focusable="true" />
                        <ImageView
                            android:id="@+id/devOneMail"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/devOneWeb"
                            android:clickable="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_mailto"
                            android:focusable="true" />
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>
